<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="393dp"
        android:layout_height="61dp"
        android:text="@string/text_add_card"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/middle_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintWidth_default="wrap" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/middle_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/shape"
        android:text="@string/text_button"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/middle_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />


</androidx.constraintlayout.widget.ConstraintLayout>